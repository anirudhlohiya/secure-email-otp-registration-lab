# sample.env
PORT=3000

# MongoDB Atlas Connection String (Replace <USER>, <PASS>, etc.)
MONGO_URI="mongodb+srv://<USER>:<PASS>@<CLUSTER>.mongodb.net/user_auth_db?retryWrites=true&w=majority"

# Nodemailer Configuration (Using Gmail App Password or an SMTP Relay like Mailtrap)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_16_character_app_password_or_smtp_pass

# Security
OTP_EXPIRY_MINUTES=10
JWT_SECRET=a_long_secure_string_for_token_generation